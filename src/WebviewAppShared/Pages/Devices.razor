    public void GetData()
    {
        //query = "SELECT rowid, * FROM Devices";
        query = "SELECT * FROM Devices";
        dataTable = dbConn.GetData(query);

        devices = new List<Device>();

        for (int i = 0; i < dataTable.Rows.Count; i++)
        {
            Device dvc = new Device();
            //dvc.Id = Convert.ToString(dataTable.Rows[i]["rowid"]);
            dvc.SerialNumber = Convert.ToString(dataTable.Rows[i]["SerialNumber"]);
            dvc.Name = Convert.ToString(dataTable.Rows[i]["Name"]);
            dvc.Image = Convert.ToString(dataTable.Rows[i]["Image"]);
            dvc.Status = Convert.ToString(dataTable.Rows[i]["Status"]);
            dvc.LastTested = Convert.ToString(dataTable.Rows[i]["LastTested"]);
            devices.Add(dvc);
        }
    }
}